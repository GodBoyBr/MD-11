<PropertyList>

	<path>res/EAD.ac</path>
	
	<animation>
		<type>pick</type>
		<object-name>ead.screen</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>canvas_ead.showEAD();</script>
			</binding>
		</action>
	</animation>

	<effect>
		<inherits-from>Aircraft/MD-11/Models/Effects/displays/lcd</inherits-from>
		<parameters>
			<inner-angle type="float">45</inner-angle><!-- 0-90, use 90 for LED or plasma display-->
			<outer-angle type="float">60</outer-angle><!-- 0-90, but greater than inner -->
			<black-angle type="float">75</black-angle><!-- 0-90, but greater than outer -->
			<dirt-factor>0.08</dirt-factor>
			<contrast type="float">0.85</contrast>
		</parameters>
		<object-name>ead.screen</object-name>
	</effect>

</PropertyList>
