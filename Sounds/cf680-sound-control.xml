			<expression>
				<table>
					<property>/engines/engine[0]/n1-actual</property>
					<entry><ind>  0.0</ind><dep>  0.0</dep></entry>
					<entry><ind> 23.7</ind><dep> 62.9</dep></entry>
					<entry><ind>117.5</ind><dep>112.6</dep></entry>
