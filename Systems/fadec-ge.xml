		<update-interval-secs type="double">0.05</update-interval-secs>
		<input>
			<expression>
				<div>
					<floor>
						<sum>
							<product>
								<property>/fdm/jsbsim/fadec/limits/rated-thrust-n1</property>
								<value>10</value>
							</product>
							<value>0.5</value> <!-- Make it round correctly -->
						</sum>
					</floor>
					<value>10</value>
				</div>
			</expression>
		</input>
		<output>/systems/thrust/n1/ga-lim</output>
	</filter>
	
