					</greater-than>
				</and>
			</condition>
		</enable>
		<input>
			<condition>
				<equals>
					<property>/options/eng</property>
					<value>GE</value>
				</equals>
			</condition>
			<expression>
				<table>
					<property>/engines/engine[0]/n1-actual</property>
					<entry><ind> 23.7</ind><dep>342</dep></entry>
					<entry><ind>118.0</ind><dep>620</dep></entry>
				</table>
			</expression>
		</input>
		<input>
			<condition>
				<equals>
